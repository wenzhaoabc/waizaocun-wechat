.goto-origin-position {
  top: 800rpx;
}

.full-view-button {
  float: right;
}

.try-button{
  width: 100%;
  padding: 20px;
}

.bottom-action {
  position: absolute;
  z-index: 3;
  padding: 0 32rpx;
  border-radius: 40rpx 40rpx;
  width: 100%;
  /* height: 30vh; */
  bottom: 0;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 1));
}

.action-search {
  margin-top: 40rpx;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 1));
}

.action-item {
  margin: 40rpx 0;
  text-align: center;
}

.action-img {
  width: 60px;
  height: 60px;
  padding: 10rpx;
  border: 1px solid #eee;
  background-color: hsl(194, 72%, 66%);
  border-radius: 10px;
}

.action-text {
  font-size: larger;
  margin-top: 10rpx;
}

.action-item-hover {
  color: rgb(11, 50, 221);
}

.action-item-hover .action-img {
  background-color: hsla(194, 72%, 40%, 0.9);
}

.search-res-desc {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}