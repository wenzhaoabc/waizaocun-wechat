.btn-item {
  text-align: center;
}

.btn-text {
  font-size: larger;
}


/* 垂直居中 */
.tb-center-flex {
  display: flex;
  justify-content: center;
  align-items: center;
}


.sitedetail {
  position: absolute;
  z-index: 4;
  /* padding-top: 20px; */
  bottom: 0vh;
  background-color: #fff;
  border-radius: 40rpx 40rpx 0 0;
  width: 100%;
  height: fit-content;
}

.sitedetail .swipper {
  margin: 20px 20px;
  height: 100%;
}

.scroll-view-sites {
  height: 100%;
  /* padding-bottom: 20px; */
  width: 100%;
}

.site-title {
  font-size: x-large;
  margin: 10px 0 5px 0;
}

.community-name {
  margin-bottom: 10px;
  color: grey;
  font-size: small;
}

.site-detail-text {
  margin-top: 5px;
  padding-bottom: 15px;
  font-size: medium;
}

