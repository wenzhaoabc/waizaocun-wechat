.control-btn {
  position: absolute;
  height: 40px;
  width: 40px;
  z-index: 1;
  background: rgba(255, 255, 255, 0.2);
  line-height: 35px;
  font-size: 30px;
  text-align: center;
  border-radius: 4px;
  right: 10px;
}


.control-btn-mapform {
  top: 200rpx;
  z-index: 1;
}

.float-bottom {
  position: absolute;
  z-index: 2;
  width: 100%;
  height: 382rpx;

  bottom: 0;
}

.btn-row {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: #fff;
}

.btn-icon {
  background-color: #55bb8a;
  border-radius: 25rpx;
  margin-bottom: 30rpx;
}

