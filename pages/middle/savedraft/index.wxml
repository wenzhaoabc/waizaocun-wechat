<!--pages/savedraft/savedraft.wxml-->
<cu-custom bgColor="bg-gradual-green" isBack="{{true}}">
    <view slot="backText">返回</view>
    <view slot="content">保存设计</view>
</cu-custom>

<view class="cu-card case ">
    <view class="cu-item shadow">
        <view class="image">
            <image src="{{imgurl}}" style="width: 100%;height: 450rpx;"></image>
        </view>
        <view class="margin text-center" style="font-size: large;">
            <text>最终效果图</text>
        </view>
    </view>
</view>


<view class="flex solid-bottom padding justify-around">
    <view class="bg-grey padding-sm margin-xs radius" bindtap="exeSave">分享</view>
    <view class="bg-grey padding-sm margin-xs radius" bindtap="downloadImg">下载</view>
</view>

<view class="cu-form-group align-start margin">
    <textarea maxlength="-1" bindinput="textareaBInput" placeholder="写点什么"></textarea>
</view>

<view class="padding flex flex-direction">
    <button class="cu-btn bg-green lg" bindtap="exeSave">上传</button>
</view>
